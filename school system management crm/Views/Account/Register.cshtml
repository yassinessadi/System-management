@model RegisterVM

<div class="container">

    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
                <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                <div class="col-lg-7">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Create an Account!</h1>
                            @if (TempData["Error"] != null)
                            {
                                <h4 class="h4 text-gray-900 mb-4 alert alert-danger">@TempData["Error"]</h4>
                            }
                        </div>
                        <form class="user" asp-action="Register">
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <input class="form-control form-control-user" asp-for="FullName" placeholder="Full name">
                                    <span asp-validation-for="FullName" class="text-danger"></span>
                                </div>
                                <div class="col-sm-6">
                                    <input class="form-control form-control-user" asp-for="UserName" placeholder="User name">
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <input asp-for="Email" class="form-control form-control-user" placeholder="Email">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <input class="form-control form-control-user" placeholder="Password" asp-for="Password">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="col-sm-6">
                                    <input asp-for="ConfrimPassword" class="form-control form-control-user" placeholder="Repeat Password">
                                    <span asp-validation-for="ConfrimPassword" class="text-danger"></span>
                                </div>
                            </div>
                            <input class="btn btn-primary btn-user btn-block" type="submit" value="Register Account"/>
                        </form>
                        <hr>
                        <div class="text-center">
                            <a class="small" asp-action="Login" asp-controller="Account">Already have an account? Login!</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>