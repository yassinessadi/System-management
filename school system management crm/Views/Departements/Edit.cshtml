@model Department
@{
    ViewData["Title"] = "Edit Departement";
}
<div class="row">
    <div class="col-md-6 offset-3">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="Name" class="form-label">Departement Name</label>
                <input class="form-control" asp-for="Name" />
            </div>
            <div class="form-group">
                <a asp-action="Index" class="btn btn-primary">Show All</a>
                <input type="submit" class="btn btn-success float-right" value="Edit" />
            </div>
        </form>
    </div>
</div>